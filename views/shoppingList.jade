extends templates/layout

block content
    .container
        .panel.panel-default
            .panel-heading Einkaufsliste
            table(class="table table-striped")
                tr.table-header
                    td.name-column Name
                    td.amount-column Anzahl
                    - for (var i = 0; i < shoppingData.length; i++) {
                        - var currentItem = shoppingData[i];
                        - console.log(currentItem.isClaimed);
                        - if (currentItem.isClaimed === true) {
                            tr(class="shopping-list-item danger", id=i)
                                td.item-name-column
                                    = currentItem.isClaimed
                                td.amount-column
                                    = currentItem.amount
                        - } else {
                            tr(class="shopping-list-item active", id=i)
                                td.item-name-column
                                    = currentItem.isClaimed
                                td.amount-column
                                    = currentItem.amount                      
                        - }
                    - }
