.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            //- a.navbar-brand(href='/') Brand
        .collapse.navbar-collapse(id='navbar-collapse')
            ul.nav.navbar-nav
                li
                    //- a(href='/', data-toggle='tooltip', data-placement='bottom', title='Home')
                    a(href='/')
                        | Home
                li
                    //- a(href='/cash' data-toggle='tooltip', data-placement='bottom', title='About')
                    a(href='/cash')
                        | Cash

                li 
                    a(href='/shoppingList')
                        | Shopping
                li
                    a(href='/cashPools')
                        | CashPools
            ul.nav.navbar-nav.navbar-right
                - if (loggedIn === true) {
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                            font(size='+0')
                                i.fa.fa-child
                            strong
                                = ' ' + username + ' '
                            span.caret
                        ul.dropdown-menu(role='menu')
                            li
                                a(href='/account/changePassword')
                                    i.fa.fa-edit
                                    = ' Change password'
                            li
                                a(href='/account/create')
                                    i.fa.fa-users
                                    = ' Create new account'
                            li
                                a(href='/account/delete')
                                    i.fa.fa-trash-o
                                    = ' Delete account'
                - }
                li
                    - if (loggedIn === true) {
                        a(href='/logout', data-toggle='tooltip', data-placement='bottom', title='Logout')
                            font(size='+0')
                                i.fa.fa-sign-out
                    - } else {
                        a(href='/login', data-toggle='tooltip', data-placement='bottom', title='Login')
                            font(size='+1')
                                i.fa.fa-sign-in
                    - }